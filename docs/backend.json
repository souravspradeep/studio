{
  "entities": {
    "Item": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Item",
      "type": "object",
      "description": "Represents either a lost or found item.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the item."
        },
        "name": {
          "type": "string",
          "description": "Name or title of the item."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the item."
        },
        "category": {
          "type": "string",
          "description": "Category of the item (e.g., electronics, keys, books)."
        },
        "location": {
          "type": "string",
          "description": "Location where the item was lost or found."
        },
        "date": {
          "type": "string",
          "description": "The date and time when the item was lost or found.",
          "format": "date-time"
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of an image of the item.",
          "format": "uri"
        },
        "imageDataUri": {
          "type": "string",
          "description": "Data URI of an uploaded image of the item."
        },
        "aiHint": {
          "type": "string",
          "description": "AI-generated hint for image search."
        },
        "status": {
          "type": "string",
          "description": "Current status of the item.",
          "enum": ["open", "returned"]
        },
        "ownerId": {
          "type": "string",
          "description": "The UID of the user who created the post."
        },
        "userName": {
          "type": "string",
          "description": "The display name of the user who created the post."
        },
        "userContact": {
          "type": "string",
          "description": "The contact email of the user who created the post."
        },
        "mobileNumber": {
          "type": "string",
          "description": "Optional mobile number for contact."
        },
        "submittedToOffice": {
          "type": "boolean",
          "description": "Indicates if a found item was submitted to an office."
        }
      },
      "required": ["id", "name", "description", "category", "location", "date", "status", "ownerId", "userName", "userContact"]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "fullName": {
          "type": "string",
          "description": "Full name of the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        }
      },
      "required": ["id", "email"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile information, including full name."
        }
      },
      {
        "path": "/lostItems/{lostItemId}",
        "definition": {
          "entityName": "Item",
          "schema": {
            "$ref": "#/entities/Item"
          },
          "description": "Stores all lost item posts."
        }
      },
       {
        "path": "/foundItems/{foundItemId}",
        "definition": {
          "entityName": "Item",
          "schema": {
            "$ref": "#/entities/Item"
          },
          "description": "Stores all found item posts."
        }
      }
    ]
  }
}
